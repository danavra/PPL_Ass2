<DropDownMenu>:

<MyGrid>:

    location_dd: location_dd
    min_minutes: min_minutes
    max_minutes: max_minutes
    num_of_recommendations: num_of_recommendations
    level_dd:level_dd
    gender_dd:gender_dd

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Current Location "
                size_hint_x:.3

            DropDownMenu:
                id:location_dd
                size_hint_x:.7

        GridLayout:
            cols:2
            center: root.width/2, root.height/2

            Label:
                text: "Trip Time "
                size_hint_x:.3

            GridLayout:
                cols:4
                size_hint_x: .7
                row_default_height: 30
                row_force_default: True

                Label:
                    text:"Between "
                    size_hint_x: .3

                TextInput:
                    id:min_minutes
                    input_filter: "int"
                    multiline:False

                Label:
                    text:"and "
                    size_hint_x: .3

                TextInput:
                    id:max_minutes
                    input_filter: "int"
                    multiline:False

        GridLayout:
            cols:2

            Label:
                text:"Level: "
                size_hint_x: .3

            DropDownMenu:
                id:level_dd
                size_hint_x: .7

        GridLayout:
            cols:2

            Label:
                text:"Gender(optional): "
                width:root.width*0.3
                size_hint_x: .3

            DropDownMenu:
                id:gender_dd
                size_hint_x: .7

        GridLayout:
            cols:2

            Label:
                text: "Number of recommendations "
                size_hint_x: .3

            TextInput:
                id:num_of_recommendations
                input_filter: "int"
                multiline:False
                size_hint_x: .7


        Button:
            text:"Submit"
            on_press: root.submit()
            height: root.height*0.3