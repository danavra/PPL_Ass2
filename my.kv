<DropDownMenu>:

<MyGrid>:

    location_dd: location_dd
    min_minutes: min_minutes
    max_minutes: max_minutes
    num_of_recommendations: num_of_recommendations
    level_dd:level_dd
    gender_dd:gender_dd

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "What is your current location? "

            DropDownMenu:
                id:location_dd

            Label:
                text: "How much time would you like to spend(in minutes)? "

            GridLayout:
                cols:2

                Label:
                    text:"Between "

                TextInput:
                    id:min_minutes
                    input_filter: "int"
                    multiline:False

                Label:
                    text:"and "

                TextInput:
                    id:max_minutes
                    input_filter: "int"
                    multiline:False

            Label:
                text:"Level: "

            DropDownMenu:
                id:level_dd

            Label:
                text:"Gender: "

            DropDownMenu:
                id:gender_dd

            Label:
                text: "How many recommendations\nwould you like to receive?"

            TextInput:
                id:num_of_recommendations
                input_filter: "int"
                multiline:False

            Button:
                text:"Submit"
                on_press: root.submit()